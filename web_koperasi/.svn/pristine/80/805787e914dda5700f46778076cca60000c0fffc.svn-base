<?php
defined('BASEPATH') OR exit('No direct script access allowed');

class Editprofile extends CI_Controller {
	protected $id_admin;
	 function __construct()
    {
        parent::__construct();
        $this->load->model('m_login');
        $this->m_login->cek_session();
        $sess = $this->session->userdata('admin');
        $this->id_admin = $sess['id'];
    }
	public function index()
	{
		$data = array(
			'title' => 'Edit Profile',
			'page' => 'admin/editprofile',
			'data' => $this->db->where('id', $this->id_admin)->get('admin')->row()
		);
		// print_r($this->db->where('id', $this->id_admin)->get('admin')->row());
		// exit();
		$this->load->view('admin/layout/template',$data);
	}
}