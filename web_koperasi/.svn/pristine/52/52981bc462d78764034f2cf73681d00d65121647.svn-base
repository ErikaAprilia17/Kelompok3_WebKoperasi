	function _getkode() {
		$query = $this->db->select_max('kode_pinjaman')->get('data_pinjaman')->row();
		$max_kode = $query->kode_pinjaman;
		$noUrut = (int) substr($max_kode, 3, 4);
		$noUrut++;
		$char = "PJ";
		$kodePinjaman = $char . sprintf("%04s", $noUrut);
		return $kodePinjaman;
	}
function tambah(){
