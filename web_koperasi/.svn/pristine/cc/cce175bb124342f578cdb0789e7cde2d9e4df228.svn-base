<?php
class saldo_kas extends CI_Controller {

	public function index()
	{
		$data = array(
			'title' => 'Saldo Kas',
			'page' => 'admin/laporan/v_saldo_kas',
			'data_saldo' => $this->db->get('saldo_kas')->result(),
			'bulan'=> $this->db->get('bulan')->result(),
			
		);
		$this->load->view('admin/layout/template',$data);
		}

	public function cetak()
	{
      	ob_start();
        $data['data_saldo'] = $this->db->get('saldo_kas')->result();
        $this->load->view('admin/laporan/printsaldo', $data);
        $html = ob_get_contents();
          ob_end_clean();
        
          require_once('./assets/html2pdf/html2pdf.class.php');
        $pdf = new HTML2PDF('P','A4','en');
        $pdf->WriteHTML($html);
        $pdf->Output('saldo_kas.pdf', 'D');
	}
}
