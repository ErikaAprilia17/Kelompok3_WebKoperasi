<?php
class kas_anggota extends CI_Controller {

	public function index()
	{
		$data = array(
			'title' => 'Kas Anggota',
			'page' => 'admin/laporan/v_kas_anggota',
			'data_kas' => $this->db->select('a.*,b.username,b.nama_anggota,b.jenis_kelamin,b.jabatan,b.departemen,b.alamat,b.no_telpon')
									->from('kas_anggota a')
									->join('data_anggota b','a.id_anggota=b.id_anggota')
									->get()->result(),
		);
		$this->load->view('admin/layout/template',$data);
		
	}
	 public function cetak(){
      ob_start();
        $data['kas_anggota'] = $this->db->get('kas_anggota')->result();
        $this->load->view('admin/laporan/printkas', $data);
        $html = ob_get_contents();
          ob_end_clean();
        
          require_once('./assets/html2pdf/html2pdf.class.php');
        $pdf = new HTML2PDF('P','A4','en');
        $pdf->WriteHTML($html);
        $pdf->Output('kas_anggota.pdf', 'D');
}
}